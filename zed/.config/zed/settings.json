// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "edit_predictions": {
    "provider": "copilot"
  },
  "ssh_connections": [
    {
      "host": "github.com",
      "args": [],
      "projects": []
    }
  ],
  "hard_tabs": false,
  "which_key": {
    "enabled": true,
  },
  "format_on_save": "off",
  "colorize_brackets": true,
  "diagnostics": {
    "inline": {
      "enabled": true,
    },
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-haiku-4.5",
    },
    "model_parameters": [],
  },
  "buffer_font_family": "JetBrains Mono",
  "autosave": "on_focus_change",
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Material Icon Theme",
  },
  "current_line_highlight": "none",
  "vim_mode": true,
  "ui_font_size": 18.0,
  "buffer_font_size": 18.0,
  "agent_ui_font_size": 18,
  "agent_buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "GitHub Dark",
  },
  "file_types": { "XML": ["*.xml.in", "*.xml.in.in"] },
  "outline_panel": { "dock": "right" },
  "project_panel": { "dock": "left" },
  "git_panel": { "tree_view": true, "dock": "left" },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": 120,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true,
          },
          "closureReturnTypeHints": {
            "enable": "always",
          },
        },
      },
    },
    "clangd": {
      "binary": {
        "arguments": ["-background-index", "-compile-commands-dir=build/debug"],
      },
    },
  },
  "languages": {
    "Python": {
      "language_servers": [
        "ty",
        "ruff",
        "!basedpyright",
        "!pyrefly",
        "!pyright",
        "!pylsp",
      ],
    },
  },
  "theme_overrides": {
    "GitHub Dark": {
      "syntax": {
        "comment": {
          "font_style": "italic",
          "color": "#20918f",
        },
        "comment.doc": {
          "font_style": "italic",
          "color": "#20918f",
        },
      },
    },
  },
}
